@model IEnumerable<NerdShop.WebApp.Models.Product>

<div>
    <h2>Todos os Produtos</h2>
</div>

<div class="container">
    <div class="row">
        @foreach (var product in Model)
        {
            <div class="col-sm-4 col-md-4 col-lg-4">
                &nbsp;
                <div class="border-image-product">
                    <h4>@product.Name</h4>
                    <hr>
                    <p><img src="@product.ImageUrl" class="img-fluid" /></p>
                    <hr>
                    <h3>Preço: @product.Price.ToString("c")</h3>
                </div>
            </div>
        }
    </div>
</div>