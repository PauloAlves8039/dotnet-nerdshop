@model Order

<div class="container">

    <div>
        <h2>@ViewBag.CheckoutCompleteMenssage</h2>
    </div>

    <div class="card">
        <div class="card-body">
            <p>Cliente : <strong>@Model.Name</strong>
            <p>Data do Pedido :  <strong>@Model.OrderSent</strong>
            <p>Número do Pedido   : <strong>@Model.OrderId</strong></p>

            <table class="table">
                <tr>
                    <th>Quantidade</th>
                    <th>Produto</th>
                    <th>Preço</th>
                </tr>
                        @foreach (var item in Model.OrderItems)
                        {
                    <tr>
                        <td>@item.Quantity</td>
                        <td>@item.Product.Name</td>
                        <td>@item.Product.Price</td>
                    </tr>
                        }
            </table>

            <h4>Valor Total do Pedido: <strong>@(((decimal)ViewBag.TotalOrder).ToString("C2"))</strong></h4>
        </div>
    </div>
</div>
<div class="form-group" style="text-align :center">
    <h3>
        <a class="nav-link text-info" asp-controller="Home" asp-action="Index">Retornar</a>
    </h3>
</div>